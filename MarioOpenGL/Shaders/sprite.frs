#version 330 core
in vec2 TexCoords;
out vec4 color;

uniform sampler2D image;
uniform vec3 spriteColor;

uniform vec2 roi;
uniform vec2 offset;

void main()
{
    //color = vec4(spriteColor, 1.0) * texture(image, vec2(TexCoords.x * roi.x, TexCoords.y * roi.y) + offset);
    color = vec4(spriteColor, 1.0) * texture(image, TexCoords * roi + offset);
}  